<div class="col-xs-12 col-md-10 col-md-offset-1 leg-upper">
    <div class="basics row">
        <div class="col-xs-8">
            <div class="row">
                <div class="legislator-holder  col-xs-4 col-md-3">
                    <div class="legislator">
                        <img id="legislater_image" class="{{party}}" src="{{getImage profileImage}}">
                    </div>
                </div>
                <div class="col-xs-7 col-md-8">
                    <div class="row">
                        <div class="col-xs-2 party {{party}}">
                            {{party}}
                        </div>
                        <div class="col-xs-10 name">
                            {{firstlast}}
                            <span>({{chamberMap}})</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-7 website bubble-icon">
                            <i class="fa fa-at"></i><a href="{{website}}" target="_blank">{{website}}</a>
                        </div>
                        <div class="col-xs-12 col-md-5 phone bubble-icon">
                            <i class="fa fa-phone"></i>{{phone}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-4 text-right assumed">
                    <div class="col-xs-12 text-right">
                <a href="#!states/{{summary.state}}" class="back-button btn btn-primary">
                    <i class="fa  fa-angle-double-left"></i>Back
                </a>
            </div>
           <h4> Assumed Office in {{first_elected}}</h4>
           <div class="row text-right bubble-icon">
            
               <i onclick="twitter_tweet();" class="pointer fa fa-twitter"></i>
               <i onclick="facebook_share();" class="pointer fa fa-facebook"></i>
           </div>


        </div>
    </div>
</div>
<div class="col-xs-12 col-md-10 col-md-offset-1 leg-lower">
    <div class="row">
        <div class="col-xs-12 col-md-6">

            <h3>Top Contributors ( total: {{currency contributorsTotal}} )<i 
                data-trigger="focus"
                class="fa fa-question-circle"
                data-toggle="popover"
                title="Top Contributors"
                data-content="This is a distribution amoung the top contributors to {{firstlast}}. Hover over the pieces to reveal the backer."
                tabindex="0"
                ></i></h3>
            <div class="contrib-bar">
            </div>
            <div class="contrib-details">
            </div>
        </div>
        <div class="col-xs-12 col-md-6">

            <h3>Top Industries (total: {{currency industriesTotal}} )<i 
                data-trigger="focus"
                class="fa fa-question-circle"
                data-toggle="popover"
                title="Top Industries"
                data-content="This is a distribution amoung the top industries that contribute to {{firstlast}}. Hover over the pieces to reveal the industry."
                tabindex="0"></i></h3>
            <div class="industry-bar">
            </div>
            <div class="industry-details">
            </div>
        </div>
    </div>
</div>


