<div class="row">
    <div class="col-xs-12 col-md-10 col-md-offset-1">
        <div class="row">
        <div class="col-xs-8">
            <div class="col-xs-12"><h2>{{state}} Senators and Congress</h2></div>
        </div>
            <div class="col-xs-4 text-right">
                <a href="#!chooseState" class="back-button btn btn-primary">
                    <i class="fa  fa-angle-double-left"></i>Back
                </a>
            </div>
        </div>
        <div class="row legislators-list">
            {{#each legislators}}
                <div class="legislator-holder col-xs-6 col-md-3 col-lg-2">
                    <a href="#!legislator/{{../stateId}}/{{firstlast}}">
                        <div class="legislator">
                            <img class="{{party}}" src="{{getImage profileImage}}" >
                            <span>
                            {{shortName}}
                            </span>
                        </div>
                    </a>
                </div>
            {{/each}}
        </div>
    </div>
</div>